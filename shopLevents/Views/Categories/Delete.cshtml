@model shopLevents.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@* - Ta dùng template có sẵn của MVC là dạng Delete
   - Model class ta chọn dạng dối tượng hiển thị là Category
   - Ta chọn file _MasterLayout
*@

<div id="content_1">
    <div style="margin: 10px auto; width: 70%;">
        <div class="h3">
            <h3 style="margin-top: 42px;">BẠN CÓ CHẮC CHẮN MUỐN XÓA LOẠI SẢN PHẨM NÀY?</h3>
        </div>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    MÃ LOẠI SẢN PHẨM
                </dt>
                <dd style="margin: 10px 0 40px;">
                    @Html.DisplayFor(model => model.IDCate)
                </dd>
                <dt>
                    TÊN LOẠI SẢN PHẨM
                </dt>
                <dd style="margin: 10px 0 40px;">
                    @Html.DisplayFor(model => model.NameCate)
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id) // Phải có HiddenFor để truyền được id của category vào hàm cần xóa
                <div class="form-actions no-color">
                    <input type="submit" value="XÓA" class="btn custom-btn btn-5" /> |
                    @Html.ActionLink("Trở lại", "Index")
                </div>
            }
        </div>
    </div>
</div>