@model shopLevents.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@* - Ta dùng template có sẵn của MVC là dạng Create 
   - Model class ta chọn dạng dối tượng hiển thị là Category
   - Ta chọn file _MasterLayout
*@


<div id="content_1">
    <div style="margin: 10px auto; width: 70%;">
        <div class="h3">
            <h3 style="margin-top: 42px;">TẠO MỚI LOẠI SẢN PHẨM</h3>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    MÃ LOẠI SẢN PHẨM
                    <div class="col-md-10" style="margin: 10px 0 40px;">
                        @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    TÊN LOẠI SẢN PHẨM
                    <div class="col-md-10" style="margin: 10px 0 40px;">
                        @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                        <input type="submit" value="TẠO MỚI" class="btn custom-btn btn-5" /> |
                        @Html.ActionLink("Trở lại", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>