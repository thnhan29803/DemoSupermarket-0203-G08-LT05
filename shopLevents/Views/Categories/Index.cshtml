@model IEnumerable<shopLevents.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@* - Ta dùng template có sẵn của MVC là dạng List để hiển thị dữ liệu
   - Model class ta chọn dạng dối tượng hiển thị là Category
   - Ta chọn file _MasterLayout
*@

<div id="content_1">
    <div class="h3">
        <h3 style="margin-top: 42px;">THÔNG TIN LOẠI SẢN PHẨM</h3>
    </div>
    <p style="text-align: center;">
        @Html.ActionLink("TẠO MỚI", "Create", null, new { @class = "btn custom-btn btn-4" })
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    MÃ LOẠI SẢN PHẨM
                </th>
                <th>
                    TÊN LOẠI SẢN PHẨM
                </th>
                <th>
                    THAO TÁC
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IDCate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameCate)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn custom-btn btn-5" }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn custom-btn btn-5" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn custom-btn btn-5" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


