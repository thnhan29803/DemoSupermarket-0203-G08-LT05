@model shopLevents.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<div id="content_1">
    <div style="margin: 10px auto; width: 70%;">
        <div class="h3">
            <h3 style="margin-top: 42px;">TẠO MỚI SẢN PHẨM</h3>
        </div>
        @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { @enctype = "multipart/form-data" })) // *
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    TÊN SẢN PHẨM
                    <div class="col-md-10" style="margin: 10px 0 40px;">

                        @Html.EditorFor(model => model.NamePro, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NamePro,"", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    MÔ TẢ
                    <div class="col-md-10" style="margin: 10px 0 40px;">
                        <textarea name="DecriptionPro" id="decriptionPro" class="form-control">@Model.DecriptionPro</textarea>
                        @Html.ValidationMessageFor(model => model.DecriptionPro, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    LOẠI SẢN PHẨM
                    <div class="col-md-10" style="margin: 10px 0 40px;">
                        @Html.DropDownList("Category", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    GIÁ
                    <div class="col-md-10" style="margin: 10px 0 40px;">
                        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    HÌNH SẢN PHẨM
                    <div class="col-md-10" style="margin: 10px 0 40px;">
                        <input type="file" name="ImagePro" /> 
                        @Html.ValidationMessageFor(model => model.ImagePro, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-10" style="margin: 10px 0 40px;">
                        <input type="file" name="ImageBehind" />
                        @Html.ValidationMessageFor(model => model.ImageBehind, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 mb-3 mt-3">
                        <input type="submit" value="TẠO MỚI" class="btn custom-btn btn-5" /> |
                        @Html.ActionLink("Trở lại", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts{
    <script>
        CKEDITOR.replace("decriptionPro");
    </script>
}