@model IEnumerable<shopLevents.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<div id="content_1">
    <div class="h3">
        <h3 style="margin-top: 42px;">THÔNG TIN SẢN PHẨM</h3>
    </div>
    <p style="text-align: center;">
        @Html.ActionLink("TẠO MỚI", "Create", null, new { @class = "btn custom-btn btn-4" })
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="width: 15%;">
                    TÊN SẢN PHẨM
                </th>
                <th style="width: 42%;">
                    MÔ TẢ
                </th>
                <th style="width: 7%;">
                    GIÁ
                </th>
                <th style="width: 8%;">
                    HÌNH TRƯỚC
                </th>
                <th style="width: 8%;">
                    HÌNH SAU
                </th>
                <th style="width: 10%;">
                    LOẠI SẢN PHẨM
                </th>
                <th>
                    THAO TÁC
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NamePro)
                    </td>
                    <td>
                        @Html.Raw(item.DecriptionPro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImagePro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ImageBehind)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category1.NameCate)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn custom-btn btn-5" }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn custom-btn btn-5" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn custom-btn btn-5" }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
